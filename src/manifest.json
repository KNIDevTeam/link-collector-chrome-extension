{
    "name": "KNI Link Collector tool",
    "version": "0.1",
    "description": "Collect interesting links and share them with KNI members.",
	"permissions": ["declarativeContent","contextMenus","tabs","<all_urls>"],
	"background": {
	  "page": "pages/background.html",
      "persistent": false
    },
	"browser_action": {
	  "default_title": "KNI Link Collector",
      "default_popup": "pages/popup.html",
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },
    "content_scripts" : [
      {
        "matches": ["<all_urls>"],
        "css": ["styles/injected.css"],
        "js": ["scripts/injected.js"]
      }
    ],
	"icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "commands": {
      "toggle-modal": {
        "description": "Toggle Link Collector modal window.",
        "suggested_key": {
          "default": "Ctrl+Shift+1",
          "mac": "Command+Shift+1"
        },
        "global": true
      }
    },
    "manifest_version": 2
}